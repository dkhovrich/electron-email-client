{
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint-react-hooks"
    ],
    "rulesDirectory": [],
    "rules": {
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "max-line-length": {
            "options": [
                120
            ]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "jsx-no-multiline-js": false,
        "jsx-no-lambda": false,
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    },
    "react-hooks-nesting": "error"
}